<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightBackground"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_default_space"
        android:background="@drawable/bordered_white_background">
        <ImageView
            android:id="@+id/toggle_boards_btn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        />
        <TextView
            android:id="@+id/feed_current_board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/toggle_boards_btn"
            android:textSize="@dimen/default_font_size"
            android:textColor="@color/colorDefault"
            android:text="최근 게시물">
        </TextView>
        <ImageView
            android:id="@+id/article_write_btn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_write_article"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ListView
        android:id="@+id/feed_boards_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordered_white_background"
        android:divider="#ffffff"
        android:dividerHeight="1dp"
        android:paddingTop="@dimen/layout_default_space"
        android:paddingBottom="@dimen/default_font_size"
        android:paddingLeft="@dimen/layout_large_space"
        android:paddingRight="@dimen/layout_large_space" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_articles_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>