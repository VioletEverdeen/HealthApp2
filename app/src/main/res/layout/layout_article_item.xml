<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bordered_white_background"
    android:paddingTop="@dimen/layout_large_space"
    android:paddingBottom="@dimen/layout_large_space"
    android:paddingLeft="@dimen/layout_large_space"
    android:paddingRight="@dimen/layout_large_space"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="16dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/article_body_layout"
        android:paddingRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/article_item_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/article_item_created_at_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:paddingRight="@dimen/layout_default_space"
            android:textColor="@color/black"
            android:text="ARTICLE TITLE"
            android:textSize="@dimen/title_font_size">
        </TextView>
        <TextView
            android:id="@+id/article_item_created_at_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:textColor="@color/colorMuted"
            android:text="방금 전"
            android:textSize="@dimen/meta_font_size">
        </TextView>

        <TextView
            android:id="@+id/article_item_content_tv"
            app:layout_constraintTop_toBottomOf="@+id/article_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_default_space"
            android:paddingBottom="12dp"
            android:textSize="@dimen/default_font_size"
            android:text="Article content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/article_item_additional_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/article_item_like_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_empty_heart"
            android:layout_marginRight="3dp"
            ></ImageView>
        <TextView
            android:id="@+id/article_item_like_article_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textSize="@dimen/meta_font_size"
            android:text="100"/>
        <ImageView
            android:id="@+id/article_item_comment_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_message"
            ></ImageView>
        <TextView
            android:id="@+id/article_item_comment_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textSize="@dimen/meta_font_size"
            android:text="100"/>
        <ImageView
            android:id="@+id/article_item_bookmark_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_empty_bookmark"
            ></ImageView>
        <TextView
            android:id="@+id/article_item_bookmark_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textSize="@dimen/meta_font_size"
            android:text="100"/>
        <TextView
            android:id="@+id/article_item_author_username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/meta_font_size"
            android:textColor="@color/colorMuted"
            android:text="작성자"/>
    </LinearLayout>

</LinearLayout>