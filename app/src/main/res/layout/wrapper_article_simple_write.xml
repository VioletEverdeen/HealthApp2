<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/article_simple_write_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/article_simple_write_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="18dp"
            android:textFontWeight="10"
            android:hint="지금 나누고 싶은 얘기는?!"
            />

        <Button
            app:layout_constraintTop_toTopOf="@+id/article_simple_write_title"
            app:layout_constraintBottom_toBottomOf="@+id/article_simple_write_title"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/article_simple_write_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:minWidth="0dp"
            android:textSize="@dimen/default_font_size"
            android:text="작성"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="@dimen/default_font_size"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:hint="아무 얘기나 함께 나눠봐요."/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
